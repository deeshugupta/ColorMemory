<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.Holo.Light.NoActionBar"
    tools:context="com.colormem.ui.Launch" >

        <Button
            android:id="@+id/gamestarter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gamesettings"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="58dp"
            android:background="@drawable/launch_button_selector" />

        <Button
            android:id="@+id/gameStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/gamesettings"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="65dp"
            android:background="@drawable/launch_button_selector" />

        <Button
            android:id="@+id/gamesettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gameStats"
            android:layout_alignLeft="@+id/gamestarter"
            android:layout_marginBottom="46dp"
            android:background="@drawable/launch_button_selector" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:text="TextView" />

        <Button
            android:id="@+id/helpIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/heading"
            android:layout_marginBottom="22dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/helpbuttonselector" />

</RelativeLayout>
